                android:id="@+id/capturePhoto4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capture Photo"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/exhaustPipeImageView_2"
                android:layout_width="145dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:visibility="gone"
                app:srcCompat="@drawable/checklist" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/commentsOnExhaustPipe3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Comments On Exhaust Pipe Here:" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/exhaustPipePartNumber_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Exhaust Pipe Part Number Here:" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/capturePhoto_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Capture Photo ?"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/capturePhotoGroup4"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/capturePhoto4Yes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
