            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/exhaustPipePartNumber_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Exhaust Pipe Part Number Here:" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/capturePhoto2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Capture Photo ?"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/capturePhotoGroup2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/capturePhoto2Yes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/capturePhoto2No"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No" />
            </RadioGroup>

            <Button
                android:id="@+id/capturePhoto3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capture Photo"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/exhaustPipeImageView_1"
                android:layout_width="145dp"
                android:layout_height="132dp"
                android:layout_gravity="center"
                android:visibility="gone"
                app:srcCompat="@drawable/checklist" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/commentsOnExhaustPipe2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Comments On Exhaust Pipe Here:" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/exhaustPipePartNumber_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Exhaust Pipe Part Number Here:" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/capturePhoto_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Capture Photo ?"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/capturePhotoGroup3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/capturePhoto3Yes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/capturePhoto3No"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No" />
            </RadioGroup>

