                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo Of Exhaust Muffler"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/exhaustMufflerImageView"
                android:layout_width="145dp"
                android:layout_height="132dp"
                android:layout_gravity="center"
                android:visibility="gone"
                app:srcCompat="@drawable/checklist" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/commentsOnExhaustMuffler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Comments On Exhaust Muffler Here:" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/exhaustPipePartNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Exhaust Pipe Part Number Here:" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/capturePhoto1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Capture Photo ?"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/capturePhotoGroup1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/capturePhoto1Yes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/capturePhoto1No"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No" />
            </RadioGroup>

            <Button
                android:id="@+id/photoOfExhaustPipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo Of Exhaust Pipe"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/exhaustPipeImageView"
                android:layout_width="145dp"
                android:layout_height="132dp"
                android:layout_gravity="center"
                android:visibility="gone"
